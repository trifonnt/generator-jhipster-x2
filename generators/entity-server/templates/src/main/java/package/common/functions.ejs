	//@Trifon - Identifier/Sequence
	// Returns true if entity contains any field which uses Sequence
	hasFieldWithSequence = function(fields) {
		let hasSequence = false;
		for (idx in fields) {
			const field = fields[idx];
			const fieldName = field.fieldName;
			const fieldSequence = field.fieldSequence;
			if (fieldSequence) {
				return true;
			}
		}
		return hasSequence;
	}
	
