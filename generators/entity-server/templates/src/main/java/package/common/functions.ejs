	// Find Field by field name.
	findFieldByName = function(fieldNameToFind, fields) {
	  for (idx in fields) {
	    const field = fields[idx];
	    const fieldName = field.fieldName;
		if (fieldNameToFind === fieldName) {
	      return field;
		}
	  }
	  return null;
	}

